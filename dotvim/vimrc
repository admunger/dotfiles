set nocompatible

execute pathogen#infect()

"========= GENERAL OPTIONS =========

"Option to remove any traces in .viminfo
set viminfo=/5,'0,:5,<0,@0,f0
"            |  |  |  |  |  '-file marks 0-9,A-Z not saved               
"            |  |  |  |  '-input-line history not saved
"            |  |  |  '-registers not saved
"            |  |  '-5 last command-line history saved
"            |  '-file marks not saved
"            '-5 recent search history will be saved
"        no % : buffer list not saved

"ruler options
set ruler
set number
set relativenumber
set linebreak "backspace support
"command mode completion
set wildmenu
set wildignore=*.pdf,*.png,*.eps,*.o
"case-insensitive file completion
set wildignorecase
set mouse=a
" split configs
set splitright
set splitbelow
"scrolling config
set scrolloff=4

"stays in current column if possible with G/gg
set nostartofline

set magic
vmap C "+y
set whichwrap+=<,>,[,]

"Options for search features
set hlsearch
set incsearch
set ignorecase
set smartcase


"These 2 filetypes BEFORE "syntax on"
filetype plugin on
filetype indent on
syntax on

"========= GUI/color configurations =========
set t_Co=256 "256 colors
"gvim configs
if has('gui_running')
    colorscheme badwolf "gurunew
    set guioptions-=T  "remove toolbar
    set guioptions-=r  "remove right-hand scroll bar
    set guioptions-=L  "remove left-hand scroll bar

    "specify initial dimensions of the window
    set lines=50 columns=80
    set guitablabel=%N\ %t
elseif exists('$TMUX')
    colorscheme munger2
else
    colorscheme monokai-phoenix "eldar elflord
    "set to goldenrod for gray comments
endif

if &diff
    colorscheme goldenrod
endif

"Code options
"enable # vim: header in file
set modeline
